{
    "inbounds": [
        {
            "listen": "::",
            "listen_port": PORT,
            "sniff": true,
            "sniff_override_destination": true,
            "tag": "vless-in",
            "tls": {
                "enabled": true,
                "reality": {
                    "enabled": true,
                    "handshake": {
                        "server": "SNI",
                        "server_port": 443
                    },
                    "private_key": "PRIVATE-KEY",
                    "short_id": [
                        "SHORT-ID"
                    ]
                },
                "server_name": "SNI"
            },
            "transport": {
                "service_name": "SERVICE-NAME",
                "type": "grpc"
            },
            "type": "vless",
            "users": [
                {
                    "flow": "",
                    "uuid": "UUID"
                }
            ]
        }
    ],
    "log": {
        "level": "info",
        "timestamp": true
    },
    "outbounds": [
                {
         "type": "socks",
         "tag": "socks-out",

         "server": "127.0.0.1",
         "server_port": 40000,
         "version": "5",
        }
    ]
}
